void readArray(Profesor *arr, int x)
{
    //Profesor p = arr;
    for(int c=0; c<x; c++)
    {
        scanf("%s",(*(arr+c)).nombre);
        scanf("%f",&(*(arr+c)).calificacion);
        getchar();
    }
}

