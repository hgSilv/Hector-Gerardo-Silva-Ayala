void readArray(Profesor *arr, int x)
{
    int c;
    printf("Cuantos profes hay en esta lista?: ");
	scanf("%d", &x);
    for(c=0; c<x; c++)
    {
        gets(arr[c].nombre);
        scanf("%f",arr[c].calificacion);
    }
}
