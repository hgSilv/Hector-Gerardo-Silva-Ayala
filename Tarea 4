//GMO-HS
#include <stdio.h>
#include "Stack.h"
#include <string.h>

bool balancedBrackets(char *exp);

int main(){

    bool res;
    char *expresion;
    printf("Introduce la expresion: \n ");
    gets(expresion);
    res = balancedBrackets(expresion);
    if(res==true)
        printf("\nLa expresion esta correctamente balanceada. \n");
    else
        printf("La expresion esta incorrectamente balanceada. \n");

	return 0;
}

bool balancedBrackets(char *exp)
{
    int i, check, t;
    Stack temp;
    temp = createStack();
    for(i=0; i<strlen(*exp); i++)
    {
        if((exp[i] == "[")||(exp[i] == "("))
            push(temp, 1);
        else if ((exp[i] == "]")||(exp[i] == ")"))
            t = pop(temp);
    }
    check = top(temp);
    if(check == NULL)
        return true;
    else
        return false;
}
